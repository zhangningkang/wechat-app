/* pages/detail/detail.wxss */
.main{
    padding: 15rpx;
}

.video_info{
    margin-top: 10rpx;
    color: #666;
}

video{
    width: 100%;
}

.title{
    display: flex;
    justify-content: space-between;
    font-size: 36rpx;
    
}

.author{
    margin-top: 10rpx;
    
    font-size: 26rpx;
}

.author .name{
    color: black;
    
}

.author > text{
    margin-right: 23rpx;
}

/* 推荐视频列表样式 */
.others{
    margin-top: 20rpx;
}
.others_wrap{
    display: flex;
    justify-content: space-between;
    margin-bottom: 15rpx;
}

.img {
   width: 35%;
   display: flex;
   justify-content: center;
   align-items: center;
}
.img image{
    width: 90%;
    border-radius: 15rpx;
}

.others_info{
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.others_title{
    color: #fb7299;
    font-size: 32rpx;
}

/* .count{
    display: flex;
    justify-content: space-around;
   
} */

.count > text{
    color: #666;
    font-size: 26rpx;
    margin-right: 56rpx;
}

/* 评论样式 */
.comments_wrap{
    margin-top: 10rpx;
}

.comments_title{
    padding: 10rpx;
    font-size: 26rpx;
    color: #666;
}

.comments_list{

}

.comment_item{
    padding: 10rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid #666;
}

.comment_img{
    flex:1;
    display: flex;
    align-items: center;
    justify-content: center;
}
.comment_img image{
    width: 60%;
    border-radius: 50%;
}

.comment_info{
    flex: 5;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.details{
    display: flex;
    justify-content: space-between;
}

.details .username{
    font-size: 26rpx;
    color: black;
}

.details .date{
    font-size: 24rpx;
    color: #666;
}

.content{
    font-size: 28rpx;
    color: black;
}