/* 导航样式 */
.nav{
    white-space: nowrap;
    padding:5rpx 0;
}

.nav_item{
    padding: 20rpx 45rpx;
    font-size: 30rpx;
    display: inline-block;
    
}

.nav_item.active{
    border-bottom: 5rpx solid #fb7299;
}

/* 轮播图样式 */
.slides{
    margin-top: 10rpx;
}
.slides swiper{
    height: 220rpx;
}

.slides navigator{
    width: 100%;
    height: 100%;
}

.slides image{
    width: 100%;
    height: 100%;
}

/* 视频列表样式 */
.video_wrap{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 10rpx;
}

.video_item{
    width: 48%;
    margin-bottom: 20rpx;
}
.img_wrap{
    position: relative;

}
image{
    width: 100%;
    border-radius: 15rpx;
}
.info_wrap{
    position: absolute;
    width: 100%;
    bottom: 10rpx;
    left: 0;
    display: flex;
    justify-content: space-around;
    font-size: 35rpx;
    color: #fff;
}

.video_wrap .title{
    font-size: 26rpx;
    
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}